<div class="guesser">
    <canvas id="canvas" width="280" height="280" style="border: none;"></canvas>
    <button id="clear-btn" class="clear-btn">Clear</button>
    <div class="bar-card">
        <div class="bar-card__bar-container">
            <div class="bar-card__bar">
                <div id="fill-0" class="bar-card__bar-fill" />
            </div>	
            <span id="digit-0" class="bar-card__digit">0</span>
        </div>
        <div class="bar-card__bar-container">
            <div class="bar-card__bar">
                <div id="fill-1" class="bar-card__bar-fill" />
            </div>	
            <span id="digit-1" class="bar-card__digit">1</span>
        </div>
        <div class="bar-card__bar-container">
            <div class="bar-card__bar">
                <div id="fill-2" class="bar-card__bar-fill" />
            </div>	
            <span id="digit-2" class="bar-card__digit">2</span>
        </div>
        <div class="bar-card__bar-container">
            <div class="bar-card__bar">
                <div id="fill-3" class="bar-card__bar-fill" />
            </div>	
            <span id="digit-3" class="bar-card__digit">3</span>
        </div>
        <div class="bar-card__bar-container">
            <div class="bar-card__bar">
                <div id="fill-4" class="bar-card__bar-fill" />
            </div>	
            <span id="digit-4" class="bar-card__digit">4</span>
        </div>
        <div class="bar-card__bar-container">
            <div class="bar-card__bar">
                <div id="fill-5" class="bar-card__bar-fill" />
            </div>	
            <span id="digit-5" class="bar-card__digit">5</span>
        </div>
        <div class="bar-card__bar-container">
            <div class="bar-card__bar">
                <div id="fill-6" class="bar-card__bar-fill" />
            </div>	
            <span id="digit-6" class="bar-card__digit">6</span>
        </div>
        <div class="bar-card__bar-container">
            <div class="bar-card__bar">
                <div id="fill-7" class="bar-card__bar-fill" />
            </div>	
            <span id="digit-7" class="bar-card__digit">7</span>
        </div>
        <div class="bar-card__bar-container">
            <div class="bar-card__bar">
                <div id="fill-8" class="bar-card__bar-fill" />
            </div>	
            <span id="digit-8" class="bar-card__digit">8</span>
        </div>
        <div class="bar-card__bar-container">
            <div class="bar-card__bar">
                <div id="fill-9" class="bar-card__bar-fill" />
            </div>	
            <span id="digit-9" class="bar-card__digit">9</span>
        </div>
    </div>
    <script src="../../onnx.js"/>
</div>
<script src="https://cdn.jsdelivr.net/npm/onnxjs/dist/onnx.min.js"></script>

<style>
.bar-card {
    height: 280px;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    border-width: 1px;
    border-color: #E8E8E8;
    background-color: white;
    border-style: solid;
    justify-content: space-evenly;
}

.bar-card__bar-container {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 100%;
    align-items: center;
}

.bar-card__bar {
    background-color: #E8E8E8;
    height: 100%;
    width: 100%;
    border-radius: 6px;
    display: flex;
    align-items: end;
}

.bar-card__digit {
    font-size: 14px;
}
.bar-card__digit--predicted {
    font-size: 14px;
    color: #0E8BFF;
}

.bar-card__bar-fill{
    background-color: #B8B8B8;
    width: 100%;
    height: 0%;
    border-radius: 6px;
}

.bar-card__bar-fill--predicted{
    background-color: #0E8BFF;
    width: 100%;
    height: 0%;
    border-radius: 6px;
}

#clear-btn {
    background-color: white;
    width: 280px;
    padding: 0.4rem;
    border-radius: 10px;
    border-style: none;
    font-family: 'Atkinson', sans-serif;
    font-size: 16px;
}

#clear-btn:hover{
    background-color: #E8E8E8;
}

#canvas {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    background-color: white;
}

.guesser {
    width: 280px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin: auto;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    z-index: 1;
    background-color: white;
    border-radius: 10px;
}
</style>